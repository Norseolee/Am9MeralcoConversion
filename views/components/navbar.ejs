<script>
    document.getElementById('utilityToggle').addEventListener('click', function(e) {
        var subMenu = document.getElementById('utilitySubMenu');
        if (subMenu.style.display === 'none') {
            subMenu.style.display = 'block';
        } else {
            subMenu.style.display = 'none';
        }
    });
</script>