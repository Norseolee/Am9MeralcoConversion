<!-- Add User Modal -->
<% if(view === 'user' && mainUser.role_id === 1) {%>
    <div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-brand text-white">
                <div class="modal-header">
                    <h5 class="modal-title" id="addUserModalLabel">Add User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="addUserForm" method="POST" action="user_process/add-user">
                    <div class="modal-body bg-brand">
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="username" required class="form-control bg-brand bg-brand">
    
                        <label for="password" class="mt-3">Password:</label>
                        <input type="password" id="password" name="password" required class="form-control bg-brand bg-brand">
    
                        <label for="role" class="mt-3">Role:</label>
                        <select id="role" name="role" required class="form-select bg-brand text-white">
                            <option value="">Select Role</option>
                            <% roles.forEach(role => { %>
                                <option value="<%= role.role_id %>"><%= role.roles_name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button class="btn btn-success" type="submit">Submit</button>
                    </div>
                </form> 
            </div>
        </div>
    </div>
    <% } else if(view === 'tenant' && mainUser.role_id === 1) { %>
    <!-- Add Tenant Modal -->
    <div class="modal fade" id="addtenantModal" tabindex="-1" aria-labelledby="addtenantModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content  bg-brand text-white">
                <div class="modal-header">
                    <h5 class="modal-title" id="addtenantModalLabel">Add Tenant</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="addTenantForm" method="POST" action="tenant_process/add-tenant" enctype="multipart/form-data"  class="p-4">
                    <h3>Primary Information</h3>
                    <div>
                        <label class="form-label" for="business_name">Business Name:</label>
                        <input class="form-control bg-brand" type="text" id="business_name" name="business_name" required>
        
                        <label class="form-label" for="unit">Unit: </label>
                        <input class="form-control bg-brand" type="text" id="unit" name="unit" required>
                    </div>
                    <div>
                        <label class="form-label" for="full_name">Full name:</label>
                        <input class="form-control bg-brand" type="text" id="full_name" name="full_name" required>
                    </div>
                    <div>
                        <label class="form-label" for="address">Address:</label>
                        <input class="form-control bg-brand" type="text" id="address" name="address" required>
                    </div>
                    <div>
                        <label class="form-label" for="email">Email:</label>
                        <input class="form-control bg-brand" type="text" id="email" name="email" required>
                        <label class="form-label" for="contact_number">Contact Number:</label>
                        <input class="form-control bg-brand" type="text" id="contact_number" name="contact_number" required>
                    </div>
                    <br>
                    <hr>
                    <div>
                        <label class="form-label" for="lease_start">Lease Start:</label>
                        <input class="form-control text-white bg-brand" type="date" id="lease_start" name="lease_start" required>
                        <label class="form-label" for="lease_end">Lease End:</label>
                        <input class="form-control text-white bg-brand" type="date" id="lease_end" name="lease_end" required>
                    </div>
                    <br>
                    <hr>
                    <h3>Documents</h3>
        
                    <div>
                        <label class="form-label" for="image_id_front"> ID FRONT:</label>
                        <input class="form-control text-white bg-brand" type="file" id="image_id_front" name="image_id_front" accept="image/*" >
                        <label class="form-label" for="image_id_back"> ID BACK:</label>
                        <input class="form-control text-white bg-brand" type="file" id="image_id_back" name="image_id_back" accept="image/*" >
                    </div>
                    <div>
                        <label class="form-label" for="signature">Signature:</label>
                        <input class="form-control text-white bg-brand" type="file" id="signature" name="signature" accept="image/*" >
                    </div>
                    <div>
                        <img id="previewSignature" src="#" alt="Signature Preview" style="display: none;">
                        <img id="previewImageIdFront" src="#" alt="Valid Id Preview Front" style="display: none;">
                        <img id="previewImageIdBack" src="#" alt="Valid Id  Preview Back" style="display: none;">
                    </div>
        
                    <input type="hidden" name="status" value="active">
                    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button class="btn btn-success" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% } %>